# Simply Maestro environment configuration

# Target process command (for monitoring only - not used for auto-restart)
SIMPLY_MAESTRO_TARGET_CMD=uv run python -m simply_lumina

# Working directory for Simply Maestro to operate in
SIMPLY_MAESTRO_WORKING_DIR=/path/to/simply-lumina

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
SIMPLY_MAESTRO_LOG_LEVEL=INFO

# MCP server port for SSE (Server-Sent Events)
SIMPLY_MAESTRO_MCP_PORT=4998

# Target process port (to detect if it's already running)
SIMPLY_MAESTRO_TARGET_PORT=5000
